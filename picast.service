[Unit]
Description=Picast - A Simple Wireless Display Receiver on Raspberry Pi - Service
After=network.target
Requires=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=5s
ExecStartPre=/usr/sbin/logrotate --force /etc/logrotate.d/picast.logrotate
ExecStart=su pi -c "/home/pi/.local/bin/picast -c /home/pi/settings.ini"

[Install]
WantedBy=multi-user.target
